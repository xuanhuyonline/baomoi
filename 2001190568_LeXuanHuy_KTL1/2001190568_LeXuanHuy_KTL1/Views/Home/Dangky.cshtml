@model _2001190568_LeXuanHuy_KTL1.Models.User
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container bg-light">
    <h4 style="text-align:center" class="mt-3">ĐĂNG KÝ TÀI KHOẢN</h4>
    <div class="mb-3">
        <label for="username">Tên khách hàng</label>
        @Html.TextBoxFor(model => model.Ten, new
                {
                    @class = "form-control",
                    placeHolder = "Enter Your UserName"
                })
        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label for="email">Địa chỉ Email</label>
        @Html.TextBoxFor(model => model.Email, new
                {
                    @class = "form-control",
                    placeHolder = "Enter Your email Address"
                })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label for="pass">Password</label>
        @Html.TextBoxFor(model => model.PassWord, new
                {
                    @class = "form-control",
                    type = "Password"
                })
        @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label>Giới tính</label><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <label>@Html.RadioButtonFor(model => model.GioiTinh, "1") Nam</label> &nbsp;
        <label>@Html.RadioButtonFor(model => model.GioiTinh, "2") Nữ</label>&nbsp;
        <label>@Html.RadioButtonFor(model => model.GioiTinh, "3") Khác</label>
    </div>
    <div class="mb-3">
        <label for="gender">Nghề nghiệp</label>
        @Html.DropDownListFor(model => model.NgheNghiep, new List<SelectListItem>
                                    {

                                        new SelectListItem { Text = "Giáo Viên", Value = "1"},
                                        new SelectListItem { Text = "Sinh Viên", Value = "2"},
                                        new SelectListItem { Text = "Kinh Doanh", Value = "3"},
                                        new SelectListItem { Text = "Bác Sĩ", Value ="4"}
                                    }, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NgheNghiep, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3" style="text-align:center;">
        <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
    </div>
</div>

